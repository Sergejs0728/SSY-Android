<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraModeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/mulibold"
            android:gravity="center"
            android:lineSpacingMultiplier="1.25"
            android:text="My Profile"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/default_text_color"
            >

        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
            <Button
                android:id="@+id/btn_selfie"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/button_default"
                />
            <ImageView
                android:background="@drawable/circle_blue"
                android:padding="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/snapshot"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selfie Mode"
            android:gravity="center"
            android:textSize="24dp"
            android:lineSpacingMultiplier="1.25"
            android:fontFamily="@font/mulibold"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We love selfies! Take a selfie now so that we could start measuring! "
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="66dp"
            android:lineSpacingMultiplier="1.25"
            android:fontFamily="@font/mulibold"
            />


        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <Button
                android:id="@+id/btn_snapshot"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/button_default"
                />
            <ImageView
                android:background="@drawable/circle_pink"
                android:padding="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/snapshot"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snapshot Mode"
            android:gravity="center"
            android:textSize="24dp"
            android:lineSpacingMultiplier="1.25"
            android:fontFamily="@font/mulibold"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just a few clicks and we'll be back with your measurements"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="66dp"
            android:lineSpacingMultiplier="1.25"
            android:fontFamily="@font/mulibold"
            />

    </LinearLayout>

</LinearLayout>